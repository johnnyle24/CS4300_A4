function new_board = CS4300_safe(x, y, kb, board) 

%0 Pits
%1 Breeze
%2 Stench
%3 Wumpus

%Pits [1,16]
%Breeze [17,32]
%Stench [33,48]
%Wumpus [49,65]

    %check is right safe
    if(y+1 <= 4)
        right_wumpus = CS4300_Get_Index(x,y+1,1,3);
        right_pit = CS4300_Get_Index(x,y+1,1,0);
        se
        right_safe = CS4300_Ask(kb,
    end
    if(y-1 > 0)
        c2(c2_counter) = CS4300_Get_Index(x,y-1,1,0);
        c2_counter = c2_counter + 1;
    end
    if(x+1 <= 4)
        c2(c2_counter) = CS4300_Get_Index(x+1,y,1,0);
        c2_counter = c2_counter + 1;
    end
    if(x-1 > 0)
        c2(c2_counter) = CS4300_Get_Index(x-1,y,1,0);
        c2_counter = c2_counter + 1;
    end

    res = CS4300_Convert_Imply_To_CNF(c1,c2);

    for i = 1:length(res)
        safety(kb_counter).clauses = res(i);
        kb_counter = kb_counter + 1;
    end


end
